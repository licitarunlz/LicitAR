@model IEnumerable<LicitAR.Core.Data.Models.Oferta>

@{
    ViewData["Title"] = "Mis Ofertas";
    var query = Context.Request.Query;
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <!-- First row: Filter fields -->
            <div class="row mb-3">
                <div class="col-md-2">
                    <input type="text" name="codigoLicitacion" class="form-control form-control-sm" placeholder="Código Licitación" value="@query["codigoLicitacion"]" />
                </div>
                <div class="col-md-3">
                    <input type="text" name="titulo" class="form-control form-control-sm" placeholder="Título" value="@query["titulo"]" />
                </div> 
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        <i class="bx bx-filter-alt"></i> Filtrar
                    </button>
                </div>
                <div class="col-md-1">
                    <a asp-action="Index" class="btn btn-warning btn-sm w-100" title="Limpiar filtros">
                        <i class="bx bx-reset"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoOfertaLicitacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaOferta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstadoOferta.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Licitacion)
                    </th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">

                                    <a class="dropdown-item" asp-action="Details" asp-route-id="@item.IdOferta">
                                        <i class="bx bx-show me-1"></i> Detalles
                                    </a>

                                    <a class="dropdown-item" asp-action="Create" asp-route-idlicitacion="@item?.IdLicitacion">
                                        <i class="bx bx-edit me-1"></i> Postularme
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoOfertaLicitacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaOferta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstadoOferta.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Licitacion.CodigoLicitacion) - @Html.DisplayFor(modelItem => item.Licitacion.Titulo)
                        </td> 
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer d-flex justify-content-center">
        <nav>
            <ul class="pagination pagination-rounded mb-0">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-pageSize="10">&laquo;</a>
                    </li>
                }
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="10">@i</a>
                    </li>
                }
                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-pageSize="10">&raquo;</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>