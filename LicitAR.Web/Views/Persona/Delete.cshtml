@model PersonaModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}


<div class="row mb-12 g-6">
    <div class="col-xl">
        <div class="card">
            <div class="card-header">
                <h4 class="mt-6">Confirmar eliminación del proveedor:</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Cuit)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cuit)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RazonSocial)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RazonSocial)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdTipoPersona)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TipoPersona)
                    </dd>
                    <h4 class="mt-6"> Contacto  </h4>
                    <hr />
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>

                    <h4 class="mt-6"> Domicilio </h4>
                    <hr />
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdProvincia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Provincia)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdLocalidad)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Localidad)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DireccionBarrio)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DireccionBarrio)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DireccionCalle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DireccionCalle)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DireccionNumero)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DireccionNumero)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DireccionPiso)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DireccionPiso)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DireccionDepto)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DireccionDepto)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DireccionCodigoPostal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DireccionCodigoPostal)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <div class="text-end">
                    <input type="hidden" asp-for="IdPersona" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> 
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
