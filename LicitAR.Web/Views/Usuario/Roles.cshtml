@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="EditRole" asp-route-id="@role.Id">
                                        <i class="bx bx-edit-alt me-1"></i> Editar
                                    </a>
                                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bx bx-trash me-1"></i> Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                        <td>@role.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-action="CreateRole" class="btn btn-success mt-3">Crear Nuevo Rol</a>
