@using LicitAR.Web.Models.Usuario
@using LicitAR.Web.Views.Usuario

@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "Login - LicitAR";
}
@model ForgotPasswordViewModel
@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}



<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <div class="app-brand justify-content-center">
                        <a href="/" class="app-brand-link gap-2">
                            <img src="/images/Logo_LicitAR_rectangle_small.png" alt="Logo LicitAR" class="app-brand-logo" style="height: 50px; width: 85px;" />
                            <span class="app-brand-text demo text-heading fw-bold"></span>
                        </a>
                    </div>
                    <h4 class="mb-1">Recuperar Contraseña</h4>

                    <form asp-action="ForgotPasswordBasic" method="post">
                         
                        <div class="form-group">
                            <div class="mb-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" autofocus>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                        </div>
                        <div class="mb-6">
                            <button type="submit" class="btn btn-primary">Enviar enlace</button>
                        </div>
                    </form>

                    <p class="text-center">
                        <span>Sin cuenta?</span>
                        <a asp-controller="Usuario" asp-action="Register">
                            <span>Crear una cuenta nueva</span>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 