@model LicitAR.Core.Data.Models.Licitacion

@{
    ViewData["Title"] = "Detalle de la licitacion";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-6">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Detalles de la Licitación</h5>
                <small class="text-body float-end">Ver los detalles</small>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdLicitacion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IdLicitacion)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodigoLicitacion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CodigoLicitacion)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Titulo)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaPublicacion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaPublicacion)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaCierre)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCierre)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdEstadoLicitacion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IdEstadoLicitacion)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IdCategoriaLicitacion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IdCategoriaLicitacion)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdLicitacion" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>
