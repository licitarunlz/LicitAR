@model LicitacionModel

@{
    ViewData["Title"] = "Editar una licitacion"; 
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-6">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Editar Licitación</h5>
                <small class="text-body float-end">Actualizar los detalles</small>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="IdLicitacion" />
                    <input type="hidden" asp-for="IdEstadoLicitacion" />
                    
                    
                    <div class="mb-3">
                        <label asp-for="CodigoLicitacion" class="form-label"></label>
                        <input asp-for="CodigoLicitacion" class="form-control" readonly="true" />
                        <span asp-validation-for="CodigoLicitacion" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Titulo" class="form-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea rows="5 " asp-for="Descripcion" class="form-control"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <h3 class="mb-3">Tipo de Invitación</h3>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="IdCategoriaLicitacion" value="1" id="privada" />
                            <label class="form-check-label" for="privada">Privada</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="IdCategoriaLicitacion" value="2" id="publica" />
                            <label class="form-check-label" for="publica">Pública</label>
                        </div>

                        <span asp-validation-for="IdCategoriaLicitacion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaPublicacion" class="form-label"></label>
                            <input asp-for="FechaPublicacion" class="form-control" />
                            <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaCierre" class="form-label"></label>
                            <input asp-for="FechaCierre" class="form-control" />
                            <span asp-validation-for="FechaCierre" class="text-danger"></span>
                        </div>
                    </div>
                     
                     
                    
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver a la Lista</a>
</div>

