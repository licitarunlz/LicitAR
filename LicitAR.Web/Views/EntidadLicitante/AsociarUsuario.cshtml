@model LicitAR.Core.Data.Models.EntidadLicitante
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Asociar Usuarios";
}

<h2>Asociar Usuarios a @Model.RazonSocial</h2>

<form asp-action="AsociarUsuario" method="post">
    <input type="hidden" name="idEntidadLicitante" value="@Model.IdEntidadLicitante" />
    <div class="form-group">
        <label for="selectedUsuarios">Seleccione Usuarios:</label>
        <select id="selectedUsuarios" name="selectedUsuarios" class="form-control" multiple>
            @foreach (var user in ViewBag.UsuariosDisponibles as List<SelectListItem>)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Asociar</button>
        <a asp-action="Details" asp-route-id="@Model.IdEntidadLicitante" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
