@{
  var userName = User?.FindFirst("FullName")?.Value ?? "Guest";
  var roleDescription = User?.FindFirst("RoleDescription")?.Value ?? "Sin Rol";
  var iniciales = string.Join(
  "",
  userName
  .Split(' ', StringSplitOptions.RemoveEmptyEntries)
  .Take(2)
  .Select(n => n[0])
  ).ToUpper();
}


@if (ViewData["navbarFull"] != null)
{
  <div class="navbar-brand app-brand demo d-none d-xl-flex py-0 me-4">
  <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link gap-2">
    <span class="app-brand-logo demo">
      <img src="~/images/Logo_LicitAR_circle_clear_small.png" alt="Logo" style="height: 40px;" />
    </span>
    <span class="app-brand-text demo menu-text fw-bold">@TempData.Peek("appName")</span>
  </a>
</div>
}

@* ! Not required for layout-without-menu *@
@if (ViewData["navbarHideToggle"] == null)
{
  <div class="layout-menu-toggle navbar-nav align-items-xl-center me-4 me-xl-0 d-xl-none">
  <a class="nav-item nav-link px-0 me-xl-6" href="javascript:void(0)">
    <i class="bx bx-menu bx-md"></i>
  </a>
</div>
}

<div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">

  <!-- Search -->
  <div class="navbar-nav align-items-center">
    <div class="nav-item d-flex align-items-center">
      <h2 class="mt-4"> @ViewData["Title"]</h2>
    </div>
  </div>
  <!-- /Search -->

  <ul class="navbar-nav flex-row align-items-center ms-auto">
    <!-- Notificaciones -->
    <li class="nav-item dropdown me-3" style="display:flex;align-items:center;">
      <a class="nav-link p-0" href="#" id="notificacionesDropdown" data-bs-toggle="dropdown" aria-expanded="false"
        aria-label="Notificaciones" style="display:flex;align-items:center;">
        <div class="avatar avatar-online" style="background:transparent;">
          <i class="bx bx-bell" style="font-size:2.5rem;color:#bbb;"></i>
          <span id="notificaciones-badge" class="badge bg-danger"
            style="position:absolute;top:0;right:0;display:none;">0</span>
        </div>
      </a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificacionesDropdown"
        style="min-width: 350px;max-width:400px;">
        <li class="dropdown-header">Notificaciones</li>
        <li id="notificaciones-list" class="text-center text-muted py-2" style="max-height:300px;overflow-y:auto;">
          Cargando...
        </li>
        <li>
          <hr class="dropdown-divider" />
        </li>
        <li class="text-center">
          <a href="@Url.Action("Index", "LicitacionNotificacion")" class="dropdown-item">Ver todas</a>
        </li>
      </ul>
    </li>
    <!-- /Notificaciones -->
    <!-- User -->
    <li class="nav-item navbar-dropdown dropdown-user dropdown" style="display:flex;align-items:center;">
      <a class="nav-link dropdown-toggle hide-arrow p-0" href="javascript:void(0);" data-bs-toggle="dropdown">
        <div class="avatar avatar-online">
          <div class="avatar-iniciales">@iniciales</div>
        </div>
      </a>
      <ul class="dropdown-menu dropdown-menu-end">
        <li>
          <a class="dropdown-item" href="javascript:void(0);">
            <div class="d-flex">
              <div class="flex-shrink-0 me-3">
                <div class="avatar avatar-online">
                  <div class="avatar-iniciales">@iniciales</div>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-0">@userName</h6>
                <small class="text-muted">@roleDescription</small>
              </div>
            </div>
          </a>
        </li>
        <li>
          <div class="dropdown-divider my-1"></div>
        </li>
        <li>
          <a class="dropdown-item" asp-controller="Usuario" asp-action="MyProfile">
            <i class="bx bx-user bx-md me-2"></i>
            <span>Mi perfil</span>
          </a>
        </li>
        <li>
          <a class="dropdown-item" href="javascript:void(0);">
            <i class="bx bx-cog bx-md me-2"></i>
            <span>Configuraci&oacute;n</span>
          </a>
        </li>

        <li>
          <div class="dropdown-divider my-1"></div>
        </li>
        <li>
          <a class="dropdown-item" asp-controller="Usuario" asp-action="Logout">
            <i class="bx bx-power-off bx-md me-2"></i>
            <span>Cerrar Sesi&oacute;n</span>
          </a>
        </li>
      </ul>
    </li>
    <!--/ User -->
  </ul>
</div>
